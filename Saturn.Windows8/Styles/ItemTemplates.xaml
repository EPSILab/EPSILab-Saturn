                               Style="{StaticResource CaptionTextStyle}"
                               TextWrapping="NoWrap" />
                    <TextBlock Text="{Binding Converter={StaticResource ShowInformationsConverter}, ConverterParameter='EndDate'}"
                               Style="{StaticResource CaptionTextStyle}"
                               Margin="5,0"
