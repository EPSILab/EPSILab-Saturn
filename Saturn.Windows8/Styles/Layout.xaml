<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Page layout roots typically use entrance animations and a theme-appropriate background color -->
    <Style x:Key="LayoutRootStyle" TargetType="Panel">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="../Assets/Background.jpg" />
            </Setter.Value>
        </Setter>
        <Setter Property="ChildrenTransitions">
            <Setter.Value>
                <TransitionCollection>
                    <EntranceThemeTransition />
                </TransitionCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ProgressBar -->
    <x:String x:Key="ProgressBarIndeterminateForegroundThemeBrush">Red</x:String>
    <x:String x:Key="ProgressBarForegroundThemeBrush">Red</x:String>

    <!-- GridView and ListView selecteditems -->
    <SolidColorBrush x:Key="ListViewItemSelectedPointerOverBackgroundThemeBrush" Color="#999" />
    <SolidColorBrush x:Key="ListViewItemSelectedPointerOverBorderThemeBrush" Color="#999" />
    <SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush" Color="#999" />

</ResourceDictionary>
